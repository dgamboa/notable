<!DOCTYPE html>
<html>
  <head>
    <title>Notable</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="main">
      <div id="brand">
        <%= link_to "Notable", root_url %>
      </div>
      <div id="login_header">
        <%= render "layouts/login" %>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
