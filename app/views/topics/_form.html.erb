<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>